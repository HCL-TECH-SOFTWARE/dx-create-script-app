{
  "name": "@hcl-software/create-dx-script-app",
  "version": "1.0.2",
  "description": "A modular toolkit for scaffolding modern React applications on HCL DX using Vite",
  "main": "dist/index.js",
  "scripts": {
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:unit": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=__tests__/unit",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "build": "tsup src/index.ts --format esm --out-dir dist --minify --clean --target node22",
    "build-zip": "npm run build && echo \"Creating zip archive...\" && mkdir -p output/zip && rm -f output/zip/create-dx-script-app-${npm_package_version}.zip && zip -r output/zip/create-dx-script-app-${npm_package_version}.zip . -x \"node_modules/*\" -x \".git/*\"",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "dx-deploy": "node deploy.cjs"
  },
  "bin": {
    "create-dx-script-app": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "type": "module",
  "engines": {
    "node": ">=20.19.0"
  },
  "keywords": [
    "hcl-dx",
    "react",
    "vite",
    "scaffold",
    "template"
  ],
  "author": "Sharika Nandakumar<SharikaN@hcl.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/HCL-TECH-SOFTWARE/dx-create-script-app.git"
  },
  "bugs": {
    "url": "https://github.com/HCL-TECH-SOFTWARE/dx-create-script-app/issues"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "dotenv": "^17.2.2",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^30.1.3",
    "jest-environment-node": "^30.1.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "overrides": {
    "stylis": "4.0.13"
  },
  "peerDependencies": {
    "react": ">=18.2.0"
  }
}